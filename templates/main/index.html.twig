{% extends 'base.html.twig' %}

{% block title %}Find the linux command{% endblock %}

{% block body %}
    <h1>Find the linux command</h1>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="find-files-tab" data-bs-toggle="tab" data-bs-target="#find-files" type="button" role="tab" aria-controls="find-files" aria-selected="true">Find Files</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Profile</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Contact</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="find-files" role="tabpanel" aria-labelledby="find-files-tab">
            <div class="mt-3">
                <p>Find files in a single path</p>
                <p><i>Use * as wildcard</i></p>
                <div class="container">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab"></div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab"></div>
    </div>
